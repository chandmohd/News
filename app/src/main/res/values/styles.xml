<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp"/>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    
    <style name="TextStyleRobotoSlabRegular">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextStyleRobotoSlabRegular.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleRobotoSlabRegular.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextStyleRobotoSlabRegular.XXLarge">
        <item name="android:textSize">@dimen/text_size_XXlarge</item>
    </style>

    <style name="TextStyleRobotoSlabRegular.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextStyleRobotoSlabRegular.LightGray">
        <item name="android:textColor">@color/light_gray</item>
    </style>
  <style name="TextStyleRobotoSlabRegular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Theme.NewsApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>