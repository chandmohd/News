<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.chand.learning.newsapp.data.Article" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_marginHorizontal="@dimen/margin_medium"
        app:cardUseCompatPadding="false"
        app:cardElevation="@dimen/card_elevation">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:imageFromUrl="@{item.urlToImage}"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:background="@drawable/image_gradient">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/TextStyleRobotoSlabRegular.Large"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="@dimen/margin_medium"
            android:text="@{item.title}"
            app:isGone="@{item.title}"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintBottom_toTopOf="@id/br"
            tools:text="Parliament LIVE: Farm Bill Aftershocks Likely"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_source_name"
            style="@style/TextStyleRobotoSlabRegular.LightGray"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{item.source.name}"
            app:isGone="@{item.source.name}"
            tools:text="News 18"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_date"
            style="@style/TextStyleRobotoSlabRegular.Gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_source_name"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            app:layout_goneMarginStart="@dimen/margin_medium"
            android:textColor="@color/gray"
            android:text="@{item.publishedAt}"
            app:isGone="@{item.publishedAt}"
            tools:text="2019-09-24"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/br"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="tv_date,tv_source_name"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>